{
  "name": "bondery-monorepo",
  "version": "0.0.1",
  "private": true,
  "packageManager": "npm@10.0.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo dev",
    "dev:core": "turbo dev --filter=webapp --filter=api --filter=@bondery/emails",
    "build": "turbo build",
    "start": "turbo start",
    "lint": "turbo lint",
    "check-types": "turbo check-types",
    "clean": "turbo clean && rm -rf node_modules"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.3",
    "@eslint/js": "^9.39.2",
    "ajv": "^8.17.1",
    "globals": "^17.0.0",
    "turbo": "^2.7.5"
  }
}
