{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "env": [
        "APP_URL",
        "WEBSITE_URL",
        "API_URL",
        "NEXT_PUBLIC_SUPABASE_PUBLISHABLE_KEY",
        "NEXT_PUBLIC_SUPABASE_URL",
        "SUPABASE_SECRET_KEY",
        "GITHUB_CLIENT_ID",
        "GITHUB_CLIENT_SECRET",
        "LINKEDIN_CLIENT_ID",
        "LINKEDIN_CLIENT_SECRET",
        "NEXT_PUBLIC_APP_URL",
        "NEXT_PUBLIC_API_URL",
        "NEXT_PUBLIC_WEBSITE_URL",
        "DO_NOT_TRACK"
      ],
      "inputs": [
        "$TURBO_DEFAULT$",
        "apps/chrome-extension/.env.production.local",
        "apps/web/.env.production.local",
        "apps/webapp/.env.production.local",
        "apps/website/.env.production.local",
        "apps/server/.env.production.local"
      ],
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**", "public/**"]
    },

    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "dev": {
      "persistent": true,
      "cache": false,
      "env": [
        "APP_URL",
        "WEBSITE_URL",
        "API_URL",
        "NEXT_PUBLIC_SUPABASE_PUBLISHABLE_KEY",
        "NEXT_PUBLIC_SUPABASE_URL",
        "SUPABASE_SECRET_KEY",
        "GITHUB_CLIENT_ID",
        "GITHUB_CLIENT_SECRET",
        "LINKEDIN_CLIENT_ID",
        "LINKEDIN_CLIENT_SECRET",
        "NEXT_PUBLIC_APP_URL",
        "NEXT_PUBLIC_API_URL",
        "NEXT_PUBLIC_WEBSITE_URL",
        "DO_NOT_TRACK"
      ],
      "inputs": [
        "$TURBO_DEFAULT$",
        "apps/chrome-extension/.env.development.local",
        "apps/web/.env.development.local",
        "apps/webapp/.env.development.local",
        "apps/website/.env.development.local",
        "apps/server/.env.development.local"
      ]
    },
    "@bondery/branding#build": {
      "outputs": [],
      "env": []
    },
    "@bondery/helpers#build": {
      "outputs": [],
      "env": []
    },
    "@bondery/types#build": {
      "outputs": ["dist/**"],
      "env": []
    },
    "start": {
      "persistent": true,
      "cache": false
    }
  },
  "globalPassThroughEnv": [
    "APP_URL",
    "WEBSITE_URL",
    "API_URL",
    "NEXT_PUBLIC_SUPABASE_PUBLISHABLE_KEY",
    "NEXT_PUBLIC_SUPABASE_URL",
    "SUPABASE_SECRET_KEY",
    "GITHUB_CLIENT_ID",
    "GITHUB_CLIENT_SECRET",
    "LINKEDIN_CLIENT_ID",
    "LINKEDIN_CLIENT_SECRET",
    "NEXT_PUBLIC_APP_URL",
    "NEXT_PUBLIC_API_URL",
    "NEXT_PUBLIC_WEBSITE_URL",
    "DO_NOT_TRACK"
  ]
}
