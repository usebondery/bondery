{
  "name": "chrome-extension",
  "version": "0.5.6",
  "private": true,
  "description": "Bondery: browser extension",
  "source": "src/manifest.json",
  "scripts": {
    "check-env": "tsx scripts/check-env.ts",
    "generate-icons": "tsx scripts/generate-icons.ts",
    "generate-manifest": "tsx scripts/generate-manifest.ts",
    "prebuild": "cross-env NODE_ENV=production npm run check-env && npm run generate-icons && cross-env NODE_ENV=production npm run generate-manifest",
    "predev": "cross-env NODE_ENV=development npm run check-env && npm run generate-icons && cross-env NODE_ENV=development npm run generate-manifest",
    "dev": "dotenv -e .env.development.local -- parcel watch --cache-dir .parcel-cache",
    "build": "dotenv -e .env.production.local -- parcel build --cache-dir .parcel-cache",
    "check-types": "tsc --noEmit",
    "lint": "eslint src"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.3",
    "@eslint/js": "^8.57.1",
    "@parcel/config-webextension": "^2.16.4",
    "@types/chrome": "^0.1.36",
    "@types/node": "^25",
    "cross-env": "^10.1.0",
    "dotenv": "^17.3.1",
    "dotenv-cli": "^11.0.0",
    "eslint": "^8.57.1",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^10.1.8",
    "eslint-config-turbo": "^2.8.7",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^4.6.2",
    "parcel": "^2.16.4",
    "prettier": "^3.8.1",
    "sharp": "^0.34.5",
    "tsx": "^4.21.0",
    "typescript": "^5"
  },
  "dependencies": {
    "@bondery/branding": "*",
    "@bondery/helpers": "*",
    "@bondery/mantine-next": "*",
    "@mantine/core": "^8.3.14",
    "@mantine/hooks": "^8.3.14",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "react": "^19.2.4",
    "react-dom": "^19.2.4"
  },
  "targets": {
    "default": {
      "distDir": "dist"
    }
  }
}
