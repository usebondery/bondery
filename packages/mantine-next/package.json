{
  "name": "@bondery/mantine-next",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./theme": {
      "import": "./dist/theme.js",
      "require": "./dist/theme.js",
      "types": "./dist/theme.d.ts"
    },
    "./theme/src": {
      "import": "./dist/theme.js",
      "require": "./dist/theme.js",
      "types": "./dist/theme.d.ts"
    },
    "./styles": {
      "style": "./src/styles.css",
      "import": "./src/styles.css",
      "require": "./src/styles.css"
    }
  },
  "scripts": {
    "build": "tsc"
  },
  "files": [
    "dist",
    "src/styles.css"
  ],
  "dependencies": {
    "@bondery/branding": "*"
  },
  "peerDependencies": {
    "@mantine/core": "^8.3.11",
    "next": "^16.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  }
}
